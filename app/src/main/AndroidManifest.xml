<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recoder.legendadunia">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LegendaDunia">
        <activity android:name="com.recoder.legendadunia.ProfileActivity" />
        <activity android:name="com.recoder.legendadunia.DetailActivity" />
        <activity android:name="com.recoder.legendadunia.MainActivity" />
        <activity android:name="com.recoder.legendadunia.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>